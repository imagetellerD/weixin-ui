<!--index.wxml-->
<view class="container">
    <view class="index-logo">
      <image src="../resources/logo.jpg" mode="aspectFit"></image>
    </view>
    <view class="index-image" bindtap="chooseImage">
        <image src="{{src}}" mode="aspectFit"></image>
    </view>
    <view class="index-button-list">
      <button bindtap="bindGeneratePoem" disabled="{{generate_button_disabled}}">生成诗歌</button>
      <button bindtap="bindSearchAd" disabled="{{search_button_disabled}}">生成广告语</button>
    </view>
</view>

